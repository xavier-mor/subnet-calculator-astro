                <div class="bg-yellow-50 p-3 rounded-lg shadow-sm">
                    <p class="font-mono">
                        <strong>AWS Reserved IPs Excluded:</strong><br />
                        {subnetResult.awsReservedIPs.map(ip => (
                            <span class="block text-gray-700">{ip}</span>
                        ))}
                    </p>
                </div>
            )}
        </div>
    </div>
  )}


