---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import SubnetCalculator from "@components/SubnetCalculator.astro";
---

<main
  class="grid lg:grid-cols-1 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      IPv4 Subnet Calculator
    </h1>


  </div>
</main>

<section id="calculator" class="container mx-auto px-4 py-8">
  <SubnetCalculator />
</section>

